<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment"
    android:background="#ffffba1a">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true" />

    <Button
        android:onClick="sports"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="SPORTS"
        android:id="@+id/button"
        android:layout_marginTop="94dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff696969"
        android:textColor="#ffffffff"
        android:layout_toLeftOf="@+id/imageView3" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="THOMASIAN UAAP        CALENDAR"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <ImageView
        android:onClick="search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/search"
        android:adjustViewBounds="false"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:background="@drawable/ust"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/listView"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffffff" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/listView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Today's Matches"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/listView"
        android:layout_toLeftOf="@+id/imageView3" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Upcoming Games"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/listView2"
        android:layout_toLeftOf="@+id/imageView3" /><![CDATA[























    android:background="@drawable/ic_launcher">












]]>
</RelativeLayout>
